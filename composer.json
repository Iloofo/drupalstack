{
    "name": "lequipe-tech/socle-drupal-8",
    "description": "L'Ã‰quipe.tech template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "autoload": {
        "classmap": [
            "automation/scripts/composer/ScriptHandler.php"
        ]
    },
    "config": {
        "discard-changes": true,
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "excludes": [
                "sites/development.services.yml"
            ]
        },
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "merge-plugin": {
            "include": [
                "web/modules/custom/*/composer.json"
            ],
            "replace": false,
            "ignore-duplicates": true
        },
        "patches": {
            "drupal/core": {
                "[2999061] Non interactive install not in English with configuration overrides is broken": "https://www.drupal.org/files/issues/2019-01-26/2999061-28.patch"
            }
        }
    },
    "require": {
        "composer/installers": "~1.0.24",
        "wikimedia/composer-merge-plugin": "^1.4.1",
        "cweagans/composer-patches": "~1.0",
        "drupal-composer/drupal-scaffold": "~2.0.1",
        "drupal/admin_toolbar": "~1.24",
        "drupal/adminimal_admin_toolbar": "~1.8",
        "drupal/adminimal_theme": "~1.3",
        "drupal/block_field": "~1.0@alpha",
        "drupal/config_filter": "~1.0",
        "drupal/console": "~1.0",
        "drupal/core": "~8.7",
        "drupal/ctools": "~3.0",
        "drupal/devel": "~2.0",
        "drupal/entity_staging": "1.x-dev",
        "drupal/paragraphs": "~1.5",
        "drupal/pathauto": "~1.0",
        "drupal/redirect": "~1.3",
        "drupal/xmlsitemap": "~1.0@alpha",
        "drupal/zurb_foundation": "~6.0@alpha",
        "drush/drush": "~9.0",
        "hirak/prestissimo": "~0.3.9",
        "zaporylie/composer-drupal-optimizations": "~1.1"
    },
    "require-dev": {
        "components/highlightjs": "9.7.*",
        "drupal/vardumper": "^1.0",
        "squizlabs/php_codesniffer": "2.*"
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ]
    }
}
